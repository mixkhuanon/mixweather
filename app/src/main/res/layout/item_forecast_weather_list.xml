<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/spacing_twenty"
    android:layout_marginTop="@dimen/spacing_twenty"
    android:background="@drawable/shape_forecast_list"
    android:padding="@dimen/spacing_twenty">

    <TextView
        android:id="@+id/dateTime"
        style="@style/TextAppearance.Material3.HeadlineSmall"
        android:layout_width="@dimen/spacing_empty"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_twenty"
        android:ellipsize="end"
        android:textAlignment="center"
        android:textColor="@color/dark_purple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/temp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="dateTimedateTimedateTime" />

    <TextView
        android:id="@+id/temp"
        style="@style/TextAppearance.Material3.HeadlineSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_twenty"
        android:textAlignment="center"
        android:textColor="@color/dark_purple"
        app:layout_constraintBottom_toBottomOf="@id/dateTime"
        app:layout_constraintEnd_toStartOf="@id/humidity"
        app:layout_constraintStart_toEndOf="@id/dateTime"
        app:layout_constraintTop_toTopOf="@id/dateTime"
        tools:text="Temp" />

    <TextView
        android:id="@+id/humidity"
        style="@style/TextAppearance.Material3.HeadlineSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_twenty"
        android:textAlignment="center"
        android:textColor="@color/dark_purple"
        app:layout_constraintBottom_toBottomOf="@id/dateTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/temp"
        app:layout_constraintTop_toTopOf="@id/dateTime"
        tools:text="Humidity" />

</androidx.constraintlayout.widget.ConstraintLayout>